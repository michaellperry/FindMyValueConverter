<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Utils="clr-namespace:FindMyValueConverter.Utils;assembly=FindMyValueConverter.Utils" x:Class="FindMyValueConverter.Controls.IndicatorControl" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<UserControl.Resources>
		<Utils:VisibleWhenTrueConverter x:Key="VisibleWhenTrueConverter"/>
	</UserControl.Resources>
	<Border>
		<Ellipse Fill="#FFF4F4F5" Stroke="Black" Visibility="{Binding On, Converter={StaticResource VisibleWhenTrueConverter}}"/>
	</Border>
</UserControl>
